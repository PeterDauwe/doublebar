;; Global WM Settings

[global/wm]
; Adjust the _NET_WM_STRUT_PARTIAL top value
; Used for top aligned bars
margin-bottom = 2

; Adjust the _NET_WM_STRUT_PARTIAL bottom value
; Used for bottom aligned bars
margin-top = 0

##########################################################################################################################################

;; File Inclusion
; include an external file, like module file, etc.

include-file = ~/.config/leftwm/themes/current/polybar/modules.ini

##########################################################################################################################################

[color]
;background = ${xrdb:color0:#222}
background = #aa1e1f29
;background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #f8f8f2
;foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40ff
modulefg = #f7f7f7
modulefg-alt = #f7f7f7

; Active Shade
shade1 = #282629
shade2 = #37474F
shade3 = #455A64
shade4 = #546E7A
shade5 = #607D8B
shade6 = #78909C
shade7 = #90A4AE
shade8 = #B0BEC5

;trans = #fffaaaaa
;white = #FFFFFF
;black = #000000
;tray-background = #404552

##########################################################################################################################################

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

##########################################################################################################################################

[bar/barbase]
width = ${env:width}
;width = 100%
height = 24
offset-x = 8
offset-y = 4
monitor = ${env:monitor}
fixed-center = true
bottom = false

background = ${color.background}
foreground = ${color.foreground}

radius = 8.0
;radius-top = 8.0
;radius-bottom = 8.0

line-size = 2
line-color = ${color.background}

;border-size = 0
;border-bottom =1
;border-color = #00000000

padding = 2
;padding-left = 2
;padding-right = 2

module-margin-left = 1
module-margin-right = 1
;module-margin = 1

font-0 = "SauceCodePro Nerd Font:size=11:weight=semibold;3"
font-1 = "Noto Sans Mono:size=10;0"
font-2 = "FontAwesome:size=10;0"
#font-4 = "Noto Sans:size=14;0"

##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################
;choices : see modules.ini
; highlighted to see where to add the modules
modules-center = google youtube firefox explorer gimp discord
modules-right = memory4 break filesystem break arch-updates break powermenu

[bar/mainbar0]
inherit = bar/barbase
modules-left = workspace0 break cpu-graph


[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

scroll-up = leftwm-command FocusPreviousTag
scroll-down = leftwm-command FocusNextTag

##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################
##########################################################################################################################################


